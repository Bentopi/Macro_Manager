<div class="container">

  <%= form_for @mealplan, url: add_meal_path do |f| %>
  <div class="form-inline text-center">

    <div class="row">
      <div class="col-xs-offset-1 col-xs-6 col-sm-offset-3 col-sm-3">
        <div class="form-group">
          <%= f.collection_select :meals, Recipe.all, :id, :name, {}, { class:'form-control' } %>
        </div>
      </div>

      <div class="text-center">
          <div class="col-xs-4 col-sm-2">
            <%= f.submit "Add", class:"btn btn-warning btn-block" %>
          </div>
      </div>
    </div>

  <% end %>
  </div>

  <br>
  <div class="container">

      <div class="text-center">

          <% @current_user.meals.each do |meal|%>
            <strong>
              <%= meal.recipe.name %> x <%= meal.quantity %>
              <%= link_to "DEL", delete_meal_path(@mealplan.id, meal.id ), method: :delete %> <br>
            </strong>
            <%= meal.recipe.kcals * meal.quantity %>kcal <br>
            <%= meal.recipe.proteins * meal.quantity %>g Protein <br>
            <%= meal.recipe.carbs * meal.quantity %>g Carbs <br>
            <%= meal.recipe.fats * meal.quantity %>g Fat
              <br>
              <br>
          <% end %>

          <%= link_to mealplan_path(id: @mealplan.id) do %>
          <div class="btn btn-success">
            Go Back
          </div>
          <% end %>
      </div>


  </div>

  <div class="macro-footer text-center">
    <div class="row text-center">
    <strong>Remaining</strong>
    </div>
    <div class="row">
      <div class="col-xs-3">
          <%= @current_user.calories - @mealplan.kcals %>kcal
      </div>
      <div class="col-xs-3">
          P:
          <%= @current_user.protein - @mealplan.proteins %>g
      </div>
      <div class="col-xs-3">
          C:
          <%= @current_user.carbs - @mealplan.carbs %>g
      </div>
      <div class="col-xs-3">
          F:
          <%= @current_user.fat - @mealplan.fats %>g
      </div>
    </div>
  </div>
    <div class="macro-footer-2 text-center">
      <div class="row text-center">
      <strong>Goal</strong>
      </div>
      <div class="row">
        <div class="col-xs-3">
            <%= @current_user.calories %>kcal
        </div>
        <div class="col-xs-3">
            P:
            <%= @current_user.protein %>g
        </div>
        <div class="col-xs-3">
            C:
            <%= @current_user.carbs %>g
        </div>
        <div class="col-xs-3">
            F:
            <%= @current_user.fat %>g
        </div>
      </div>
    </div>
