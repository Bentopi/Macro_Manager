<div class="container">

  <%= form_for @mealplan, url: add_meal_path do |f| %>
  <div class="form-inline text-center">

    <div class="row">
      <div class="col-xs-offset-0 col-xs-8 col-sm-offset-3 col-sm-3">
        <div class="form-group">
          <%= f.collection_select :meals, Recipe.all, :id, :name, {}, { class:'form-control' } %>
        </div>
      </div>

      <div class="text-center">
          <div class="col-xs-4 col-sm-2">
            <%= f.submit "Add", class:"btn btn-warning btn-block" %>
          </div>
      </div>
    </div>

  <% end %>
  </div>

  <br>
    <div class="row">
        <% @mealplan.meals.each do |meal|%>
          <div class="col-xs-12">
            <h4>
              <%= meal.recipe.name %>
              <small>
                <%= link_to "DEL", delete_meal_path(@mealplan.id, meal.id ), method: :delete %>
              </small>
            </h4>
            <% meal.recipe.recipeparts.each do |part| %>
            <br>
              <%= pluralize(((part.amount * part.ingredient.serving_amount) * meal.quantity), part.ingredient.serving_name) %> - <%= part.ingredient.name %>
            <% end %>

            <!-- <%= meal.recipe.kcals * meal.quantity %>kcal -
            <%= meal.recipe.proteins * meal.quantity %>g Protein -
            <%= meal.recipe.carbs * meal.quantity %>g Carbs -
            <%= meal.recipe.fats * meal.quantity %>g Fat -->
            <hr>
          </div>

        <% end %>
      </div>

 <br>
    <div class="row">
      <div class="col-xs-4">
        <%= form_for @mealplan, url: generate_mealplan_path(id: @mealplan.id) do |f| %>
        <div class="form-group">
            <div class="text-center">
                  <%= f.submit "Auto-Complete", class:"btn btn-success" %>
            </div>
          </div>
        <% end %>
      </div>
      <div class="col-xs-6">
        <%= link_to mealplan_path(id: @mealplan.id) do %>
        <div class="btn btn-success">
          Go Back
        </div>
        <% end %>
      </div>
    </div>


</div>

  <div class="macro-footer text-center">
    <div class="row text-center">
    <strong>Remaining</strong>
    </div>
    <div class="row">
      <div class="col-xs-3">
          <%= @current_user.calories - @mealplan.kcals %>kcal
      </div>
      <div class="col-xs-3">
          P:
          <%= @current_user.protein - @mealplan.proteins %>g
      </div>
      <div class="col-xs-3">
          C:
          <%= @current_user.carbs - @mealplan.carbs %>g
      </div>
      <div class="col-xs-3">
          F:
          <%= @current_user.fat - @mealplan.fats %>g
      </div>
    </div>
  </div>
    <div class="macro-footer-2 text-center">
      <div class="row text-center">
      <strong>Goal</strong>
      </div>
      <div class="row">
        <div class="col-xs-3">
            <%= @current_user.calories %>kcal
        </div>
        <div class="col-xs-3">
            P:
            <%= @current_user.protein %>g
        </div>
        <div class="col-xs-3">
            C:
            <%= @current_user.carbs %>g
        </div>
        <div class="col-xs-3">
            F:
            <%= @current_user.fat %>g
        </div>
      </div>
    </div>
