<div class="container">
  <br>
  <div class="row wow animated fadeIn" data-wow-delay="0.15s">
    <div class="col-sm-8 col-sm-offset-2 margin30">
      <%= form_tag do %>

        <div class="form-group">
          <%= label_tag :email %>
          <%= text_field_tag :email, params[:email], class: "form-control" %>
        </div>
        <div class="form-group">
          <%= label_tag :password %>
          <%= password_field_tag :password,"" ,class: "form-control" %>
        </div>
        <div class="form-group">
          <%= submit_tag "Sign In", class:'btn btn-danger btn-lg' %>
        </div>
        <% end %>
        <div class="">
          <h5> <%= link_to "Don't Have an Account? Sign up Here!", new_user_path %> </h5>
        </div>
    </div>
  </div>
</div>
