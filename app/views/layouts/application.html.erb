<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>Meal Slice</title>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <script src="https://use.fontawesome.com/44d0d3ac87.js"></script>
    <%= csrf_meta_tags %>



  </head>

  <body>


    <nav class="navbar navbar-default navbar-static-top">
      <div class="container">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
            <%= link_to root_path do %>
          <%=  image_tag("mealslicelogo.png", class:"navbar-left navbar-logo")%>
          <% end %>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="navbar-collapse collapse" id="navbar">
          <ul class="nav navbar-nav navbar-right">
            <% if @current_user %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Your Account<span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to "My Profile", user_profile_path %></li>
                <li role="separator" class="divider"></li>
                <li><%= link_to "Sign Out", sign_in_path, method: :delete %></li>
              </ul>
            </li>
            <% else %>
                <%= link_to "Sign In", sign_in_path, class: "btn btn-danger navbar-btn btn-spacer signin-button" %>
            <% end %>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <% if @current_user %>
            <li class=""> <%= link_to "My Nutrition", macros_path %>
            <% else %>
            <li class=""> <%= link_to "Nutrition Calculator", guest_macros_path %>
            <% end %>
            <li class=""> <%= link_to "In Development", mealcenter_path %>
            <li class=""> <%= link_to "About / FAQ", about_path %>
            <li class=""> <%= link_to "Coaching", coaching_path %>
          </ul>

        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>




    <div class="container">
  <% if notice %>
    <br>
    <div class="alert alert-danger text-center alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <%= notice %>
    </div>
  <% end %>

  <% if alert %>
    <br>
    <div class="alert alert-danger text-center alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <%= alert %>
    </div>
  <% end %>
</div>

    <%= yield %>


  </body>
</html>
